# Environment variables template
# Copy this file to .env and fill in the values.
# Do not commit the .env file to version control.

# PostgreSQL - These must match the values in docker-compose.yml
POSTGRES_DB=gerenciador_protocolos
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_PORT=5432

# Backend API & Frontend Ports
API_PORT=3001
FRONTEND_PORT=3000

# Database URL for Prisma. The host 'postgres' is the service name from docker-compose.yml
DATABASE_URL="postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@postgres:${POSTGRES_PORT}/${POSTGRES_DB}?schema=public"

# JWT Secret - Use a long, random string in your actual .env file
JWT_SECRET="your-super-secret-key"